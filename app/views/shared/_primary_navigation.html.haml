.header
  %nav#main_menu.navbar{"role" => "navigation"}
    .container
      .navbar-header
        %button.navbar-toggle{ type: "button", "data-toggle" =>"collapse", "data-target" => ".navbar-collapse" }
          %span.sr-only
            Toggle navigation
          %i.fa.fa-bars

        .logo
          %a.homelink{ href: root_path }
            = image_tag "logo1.png"

      %ul.nav.navbar-nav.pull-left-to.navbar-set-active.navbar-collapse.menutop.collapse
        - if logged_in?
          %li.dropdown
            %a.dropdown-toggle{ href: "#", "data-toggle" => "dropdown" }
              = current_user.full_name
              %b.caret

            %ul.dropdown-menu
              %li
                = link_to "Dashboard", dashboards_path

              - if logged_in? && current_user.admin?
                %li
                  = link_to "Admin", admin_root_path, style: "color: red"

              %li
                %a{ href: logout_path }
                  Logout
        - else
          %li
            %a{ href: login_path }
              Login


        %li.dropdown
          %a.dropdown-toggle{ href: "#", "data-toggle" => "dropdown"}
            About
            %b.caret

          %ul.dropdown-menu
            %li
              %a{ href: about_us_path }
                Who We Are

            %li
              %a{ href: committees_path }
                Committees

            %li
              %a{ href: "/sponsors" }
                Sponsors

            %li
              %a{ href: new_contact_path }
                Contact

        %li.dropdown
          %a.dropdown-toggle{ href: "#", "data-toggle" => "dropdown"}
            Membership
            %b.caret

          %ul.dropdown-menu
            %li
              %a{ href: memberships_path }
                Benefits / Join

            %li
              %a{ href: coupons_path }
                Coupons / Startup Pack

        %li
          %a{ href: events_path }
            Events

        %li
          %a{href: "http://blog.startupvictoria.com.au"}
            Blog
